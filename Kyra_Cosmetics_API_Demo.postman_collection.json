{
	"info": {
		"_postman_id": "kyra-cosmetics-api",
		"name": "Kyra Cosmetics API - Demo Collection",
		"description": "Complete demonstration of Kyra Cosmetics E-commerce API functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080/api",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. User Management",
			"item": [
				{
					"name": "Register New User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Ana Maria\",\n  \"email\": \"ana.maria@email.com\",\n  \"password\": \"securePassword123\",\n  \"role\": \"CUSTOMER\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/users/register",
							"host": ["{{baseUrl}}"],
							"path": ["users", "register"]
						},
						"description": "Registers a new customer user"
					}
				},
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users",
							"host": ["{{baseUrl}}"],
							"path": ["users"]
						},
						"description": "Retrieves all registered users"
					}
				},
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["users", "1"]
						},
						"description": "Retrieves a specific user by ID"
					}
				}
			],
			"description": "User registration and profile management"
		},
		{
			"name": "2. Category Management", 
			"item": [
				{
					"name": "Create Category - Makeup",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Makeup\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/categories",
							"host": ["{{baseUrl}}"],
							"path": ["categories"]
						},
						"description": "Creates Makeup category"
					}
				},
				{
					"name": "Create Category - Skincare",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Skincare\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/categories",
							"host": ["{{baseUrl}}"],
							"path": ["categories"]
						},
						"description": "Creates Skincare category"
					}
				},
				{
					"name": "Get All Categories",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/categories",
							"host": ["{{baseUrl}}"],
							"path": ["categories"]
						},
						"description": "Retrieves all product categories"
					}
				}
			],
			"description": "Product category management"
		},
		{
			"name": "3. Product Management",
			"item": [
				{
					"name": "Create Product - Lipstick",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Matte Lipstick Ruby Red\",\n  \"description\": \"Long-lasting matte lipstick in classic red\",\n  \"price\": 25.99,\n  \"stock\": 50\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/products?categoryId=1",
							"host": ["{{baseUrl}}"],
							"path": ["products"],
							"query": [
								{
									"key": "categoryId",
									"value": "1"
								}
							]
						},
						"description": "Creates a new lipstick product"
					}
				},
				{
					"name": "Create Product - Face Cream",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Hydrating Face Cream\",\n  \"description\": \"24h moisturizing cream for all skin types\",\n  \"price\": 42.50,\n  \"stock\": 30\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/products?categoryId=2",
							"host": ["{{baseUrl}}"],
							"path": ["products"],
							"query": [
								{
									"key": "categoryId",
									"value": "2"
								}
							]
						},
						"description": "Creates a new skincare product"
					}
				},
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products",
							"host": ["{{baseUrl}}"],
							"path": ["products"]
						},
						"description": "Retrieves all available products"
					}
				},
				{
					"name": "Get Products by Category",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/products/category/1",
							"host": ["{{baseUrl}}"],
							"path": ["products", "category", "1"]
						},
						"description": "Gets all products from Makeup category"
					}
				}
			],
			"description": "Product catalog management"
		},
		{
			"name": "4. Shopping Cart",
			"item": [
				{
					"name": "Add Lipstick to Cart",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/cart/1/add?productId=1&quantity=2",
							"host": ["{{baseUrl}}"],
							"path": ["cart", "1", "add"],
							"query": [
								{
									"key": "productId",
									"value": "1"
								},
								{
									"key": "quantity",
									"value": "2"
								}
							]
						},
						"description": "Adds 2 lipsticks to user's cart"
					}
				},
				{
					"name": "Add Face Cream to Cart",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/cart/1/add?productId=2&quantity=1",
							"host": ["{{baseUrl}}"],
							"path": ["cart", "1", "add"],
							"query": [
								{
									"key": "productId",
									"value": "2"
								},
								{
									"key": "quantity",
									"value": "1"
								}
							]
						},
						"description": "Adds 1 face cream to user's cart"
					}
				},
				{
					"name": "View Cart Contents",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/cart/1",
							"host": ["{{baseUrl}}"],
							"path": ["cart", "1"]
						},
						"description": "Views current cart contents"
					}
				},
				{
					"name": "Remove Product from Cart",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/cart/1/remove?productId=1",
							"host": ["{{baseUrl}}"],
							"path": ["cart", "1", "remove"],
							"query": [
								{
									"key": "productId",
									"value": "1"
								}
							]
						},
						"description": "Removes lipstick from cart"
					}
				}
			],
			"description": "Shopping cart functionality"
		},
		{
			"name": "5. Order Processing",
			"item": [
				{
					"name": "Place Order",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/orders/1",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "1"]
						},
						"description": "Places order from current cart contents"
					}
				},
				{
					"name": "View User Orders",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/orders/user/1",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "user", "1"]
						},
						"description": "Views all orders for user"
					}
				},
				{
					"name": "Update Order Status to Shipped",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/orders/1/status?status=SHIPPED",
							"host": ["{{baseUrl}}"],
							"path": ["orders", "1", "status"],
							"query": [
								{
									"key": "status",
									"value": "SHIPPED"
								}
							]
						},
						"description": "Updates order status (admin operation)"
					}
				}
			],
			"description": "Order processing and tracking"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}